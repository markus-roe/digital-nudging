generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Version {
  A
  B
}

enum ActionType {
  TASK_START
  TASK_END
  CASE_START
  CASE_SUBMIT
  CASE_ERROR
  ORDER_SELECT
}

enum TaskType {
  ORDER_ASSIGNMENT
  ORDER_VALIDATION
  DELIVERY_SCHEDULING
}

enum ErrorType {
  SEQUENCE_ERROR
  ZONE_MATCH_ERROR
  VALIDATION_ERROR
  SCHEDULING_ERROR
}

model Participant {
  id            String      @id @default(cuid())
  email         String?
  age           String?
  gender        String?
  experience    String?
  education     String?
  version       Version
  createdAt     DateTime    @default(now())
  actionLogs    ActionLog[]
  errorLogs     ErrorLog[]
  questionnaire Questionnaire?
}

model ActionLog {
  id            String      @id @default(cuid())
  participantId String
  participant   Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  action        ActionType
  task          TaskType
  orderId       String?
  timestamp     DateTime    @default(now())

  @@index([participantId])
}

model ErrorLog {
  id            String      @id @default(cuid())
  participantId String
  participant   Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  errorType     ErrorType
  task          TaskType
  orderId       String
  timestamp     DateTime    @default(now())

  @@index([participantId])
}

model Questionnaire {
  id              String   @id @default(cuid())
  participantId   String   @unique
  participant     Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  version         String
  nasaTlxMental   Int
  nasaTlxPhysical Int
  nasaTlxTemporal Int
  nasaTlxPerformance Int
  nasaTlxEffort   Int
  nasaTlxFrustration Int
  susResponses    Int[]
  confidenceRating Int
  feedback        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([participantId])
  @@index([version])
}
